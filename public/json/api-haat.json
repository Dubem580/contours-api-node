{
    "swagger": "2.0",
    "info": {
        "version": "1.5.0",
        "title": "HAAT API"
    },
    "basePath": "/api/contours",
    "tags": [{
        "name": "HAAT",
        "description": "get HAAT data"
    }],
    "paths": {
        "/haat.{format}": {
            "get": {
                "tags": ["HAAT"],
                "summary": "Get HAAT",
                "description": "Get HAAT data based on latitude, longitude, data source, number of radials, radiation center and unit of measurement. Response returned in JSON format.",
                "parameters": [{
                    "name": "lat",
                    "label": "Latitude",
                    "display": true,
                    "in": "query",
                    "description": "Latitude",
                    "required": true,
                    "type": "number",
                    "defaultValue": ""
                }, {
                    "name": "lon",
                    "label": "Longitude",
                    "display": true,
                    "in": "query",
                    "description": "Longitude",
                    "required": true,
                    "type": "number",
                    "defaultValue": ""
                }, {
                    "name": "nradial",
                    "label": "Number of Radials",
                    "display": true,
                    "in": "query",
                    "description": "Number of radials",
                    "required": true,
                    "type": "integer",
                    "defaultValue": ""
                }, {
                    "name": "rcamsl",
                    "label": "Radiation Center Above Mean Sea Level",
                    "display": true,
                    "in": "query",
                    "description": "Radiation Center Above Mean Sea Level",
                    "required": true,
                    "type": "number",
                    "defaultValue": ""
                }, {
                    "name": "src",
                    "label": "Source",
                    "display": true,
                    "in": "query",
                    "description": "Data source.",
                    "required": false,
                    "type": "string",
                    "defaultValue": "ned",
                    "enum": [
                        "ned_1",
                        "globe30"
                    ]
                }, {
                    "name": "unit",
                     "label": "Unit",
                    "display": true,
                    "in": "query",
                    "description": "Unit of measurement: m=meters, mi=miles, ft=feet",
                    "required": false,
                    "type": "string",
                    "defaultValue": "meters",
                    "enum": [
                    	"m",
                        "mi",
                        "ft"
                    ]
                }, {
                    "name": "format",
                    "label": "Format",
                    "display": false,
                    "in": "path",
                    "description": "Format for the returned results.<br /><br />Valid values: json.",
                    "required": true,
                    "type": "string",
                    "defaultValue": "json",
                    "enum": [
                        "json"
                    ]
                }],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "produces": [
                    "application/json"
                ]
            }
        }
    }
}
