{
    "swagger": "2.0",
    "info": {
        "version": "1.5.0",
        "title": "HAAT API"
    },
    "basePath": "/api/contours",
    "tags": [{
        "name": "HAAT",
        "description": "get HAAT data"
    }],
    "paths": {
        "/haat.{format}": {
            "get": {
                "tags": ["HAAT"],
                "summary": "Get HAAT",
                "description": "Get HAAT data based on latitude, longitude, data source, number of radials, radiation center and unit of measurement. Response returned in JSON format.",
                "parameters": [{
                    "name": "lat",
                    "x-label": "Latitude",
                    "x-display": true,
                    "in": "query",
                    "description": "Latitude",
                    "required": true,
                    "type": "number",
                    "default": ""
                }, {
                    "name": "lon",
                    "x-label": "Longitude",
                    "x-display": true,
                    "in": "query",
                    "description": "Longitude",
                    "required": true,
                    "type": "number",
                    "default": ""
                }, {
                    "name": "nradial",
                    "x-label": "Number of Radials",
                    "x-display": true,
                    "in": "query",
                    "description": "Number of radials",
                    "required": true,
                    "type": "integer",
                    "default": ""
                }, {
                    "name": "rcamsl",
                    "x-label": "RCAMSL (m)",
                    "x-display": true,
                    "in": "query",
                    "description": "Radiation Center Above Mean Sea Level (meters)",
                    "required": true,
                    "type": "number",
                    "default": ""
                }, {
                    "name": "src",
                    "x-label": "Source",
                    "x-display": true,
                    "in": "query",
                    "description": "National Elevation Dataset (NED) available at resolutions of 1 arc-second (ned_1) and 1/3 arc-second (ned_13). In most of Alaska, data are available at 2-arc-second (ned_2) grid spacing.<br><br>Global dataset (globe30).",
                    "required": false,
                    "type": "string",
                    "default": "ned_1",
                    "enum": [
                        "ned_1",
                        "ned_2",
                        "globe30"
                    ]
                }, {
                    "name": "unit",
                     "x-label": "Unit",
                    "x-display": true,
                    "in": "query",
                    "description": "Unit of measurement: m=meters (default), mi=miles, ft=feet",
                    "required": false,
                    "type": "string",
                    "default": "m",
                    "enum": [
                    	"m",
                        "mi",
                        "ft"
                    ]
                }, {
                    "name": "format",
                    "x-label": "Format",
                    "x-display": false,
                    "in": "path",
                    "description": "Format for the returned results.<br /><br />Defaults to json.",
                    "required": false,
                    "type": "string",
                    "default": "json",
                    "enum": [
                        "json"
                    ]
                }],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "produces": [
                    "application/json"
                ]
            }
        }
    }
}
