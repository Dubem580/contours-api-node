{
    "swagger": "2.0",
    "info": {
        "version": "1.5.0",
        "title": "Entity API"
    },
    "basePath": "/api/contours",
    "tags": [{
        "name": "entity",
        "description": "get service contour for TV or FM"
    }],
    "paths": {

        "/entity.{format}": {
            "get": {
                "tags": ["entity"],
                "summary": "Get Contour by Service Type",
                "description": "Get contour based on serviceType (TV or FM), idType (callsign, applicationid, fileNumber, antennaid), and idValue. Response returned in GeoJSON, JSONP, Shapefile, KML, GML, CSV.",
                "parameters": [{
                    "name": "serviceType",
                    "label": "Service Type",
                    "display": true,
                    "in": "query",
                    "description": "Type of broadcast service. <br /><br />Valid values: tv or fm",
                    "required": true,
                    "type": "string",
                    "defaultValue": "tv",
                    "enum": [
                        "tv",
                        "fm"
                    ]
                }, {
                    "name": "callsign",
                    "label": "Call Sign",
                    "display": true,
                    "in": "query",
                    "description": "Set of characters that serve as the public identification for a broadcast radio or television station. Must provide callsign, facilityid, or applicationid.",
                    "required": false,
                    "type": "string",
                    "default": ""                    
                }, {
                    "name": "facilityid",
                    "label": "Facility ID",
                    "display": true,
                    "in": "query",
                    "description": "The unique integer number that identifies a station. Must provide callsign, facilityid, or applicationid.",
                    "required": false,
                    "type": "string",
                    "default": ""                    
                }, {
                    "name": "applicationid",
                    "label": "Application ID",
                    "display": true,
                    "in": "query",
                    "description": "Unique ID assigned to an application. Must provide callsign, facilityid, or applicationid.",
                    "required": false,
                    "type": "string",
                    "default": ""                    
                }, {
                    "name": "nradial",
                    "label": "Number of Radials",
                    "display": true,
                    "in": "query",
                    "description": "Number of radials",
                    "required": true,
                    "type": "integer",
                    "default": ""
                }, {
                    "name": "pop",
                    "label": "Population",
                    "display": true,
                    "in": "query",
                    "description": "Population calculation",
                    "required": false,
                    "type": "boolean",
                    "default": "true",
                    "enum": [
                        "true",
                        "false"
                    ]
                }, {
                    "name": "area",
                    "label": "Coverage Area",
                    "display": true,
                    "in": "query",
                    "description": "Coverage area",
                    "required": false,
                    "type": "boolean",
                    "default": "true",
                    "enum": [
                        "true",
                        "false"
                    ]
                }, {
                    "name": "src",
                    "label": "Source",
                    "display": true,
                    "in": "query",
                    "description": "Data source.",
                    "required": false,
                    "type": "string",
                    "default": "ned_1",
                    "enum": [
                        "ned",
                        "ned_1",
                        "ned_2",
                        "ned_13",
                        "globe30",
                        "usgs"
                    ]
                }, {
                    "name": "format",
                    "label": "Format",
                    "display": false,
                    "in": "path",
                    "description": "Format for the returned results.<br /><br />Valid values: json, jsonp, shp, kml, gml, csv. Shapefiles (.shp) download as zip archive (.zip). <br /><br />Defaults to json.",
                    "required": false,
                    "type": "string",
                    "default": "json",
                    "enum": [
                        "json",
                        "jsonp",
                        "shp",
                        "kml",
                        "gml",
                        "csv"
                    ]
                }],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "produces": [
                    "application/json",
                    "text/javascript",
                    "application/zip",
                    "application/vnd.google-earth.kml+xml",
                    "text/xml",
                    "text/csv"
                ]
            }
        }
    }
}
