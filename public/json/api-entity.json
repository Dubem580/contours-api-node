{
    "swagger": "2.0",
    "info": {
        "version": "1.5.0",
        "title": "Entity API"
    },
    "basePath": "/api/contours",
    "tags": [{
        "name": "entity",
        "description": "get service contour for TV or FM"
    }],
    "paths": {

        "/entity.{format}": {
            "get": {
                "tags": ["entity"],
                "summary": "Get Contour by Service Type",
                "description": "Get contour based on serviceType (TV or FM), idType (callsign, applicationid, fileNumber, antennaid), and idValue. Response returned in GeoJSON, JSONP, Shapefile, KML, GML, CSV.",
                "parameters": [{
                    "name": "serviceType",
                    "x-label": "Service Type",
                    "x-display": true,
                    "in": "query",
                    "description": "Type of broadcast service. <br /><br />Valid values: tv or fm",
                    "required": true,
                    "type": "string",
                    "defaultValue": "tv",
                    "enum": [
                        "tv",
                        "fm"
                    ]
                }, {
                    "name": "callsign",
                    "x-label": "Call Sign",
                    "x-display": true,
                    "in": "query",
                    "description": "Set of characters that serve as the public identification for a broadcast radio or television station.<br /><br /><b>Must provide callsign, facilityid, or applicationid</b>.",
                    "required": false,
                    "type": "string",
                    "default": ""                    
                }, {
                    "name": "facilityId",
                    "x-label": "Facility ID",
                    "x-display": true,
                    "in": "query",
                    "description": "The unique integer number that identifies a station.<br /><br /><b>Must provide callsign, facilityid, or applicationid</b>.",
                    "required": false,
                    "type": "string",
                    "default": ""                    
                }, {
                    "name": "applicationId",
                    "x-label": "Application ID",
                    "x-display": true,
                    "in": "query",
                    "description": "Unique ID assigned to an application.<br /><br /><b>Must provide callsign, facilityid, or applicationid</b>.",
                    "required": false,
                    "type": "string",
                    "default": ""                    
                }, {
                    "name": "nradial",
                    "x-label": "Number of Radials",
                    "x-display": true,
                    "in": "query",
                    "description": "Number of radials",
                    "required": true,
                    "type": "integer",
                    "default": ""
                }, {
                    "name": "pop",
                    "x-label": "Population",
                    "x-display": true,
                    "in": "query",
                    "description": "Population calculation",
                    "required": false,
                    "type": "boolean",
                    "default": "true",
                    "enum": [
                        "true",
                        "false"
                    ]
                }, {
                    "name": "field",
                    "x-label": "Field Strength (dBu)",
                    "x-display": true,
                    "in": "query",
                    "description": "field strength (dBu)",
                    "required": false,
                    "type": "number",
                    "default": ""
                }, {
                    "name": "curve",
                    "x-label": "Curve",
                    "x-display": true,
                    "in": "query",
                    "description": "Type of propagation curve, range is 0-2.<br /><br /><b>0:</b> use F(50, 50) curve<br /><br /><b>1:</b>  use F(50, 10) curve<br /><br /><b>2:</b> use F(50, 90) curve",
                    "required": false,
                    "type": "string",
                    "default": "0",
                    "enum": [
                        "0",
                        "1",
                        "2"
                    ]
                }, {
                    "name": "area",
                    "x-label": "Coverage Area",
                    "x-display": true,
                    "in": "query",
                    "description": "Coverage area",
                    "required": false,
                    "type": "boolean",
                    "default": "true",
                    "enum": [
                        "true",
                        "false"
                    ]
                }, {
                    "name": "src",
                    "x-label": "Source",
                    "x-display": true,
                    "in": "query",
                    "description": "Data source.",
                    "required": false,
                    "type": "string",
                    "default": "ned_1",
                    "enum": [
                        "ned",
                        "ned_1",
                        "ned_2",
                        "ned_13",
                        "globe30",
                        "usgs"
                    ]
                }, {
                    "name": "format",
                    "x-label": "Format",
                    "x-display": false,
                    "in": "path",
                    "description": "Format for the returned results.<br /><br />Valid values: json, jsonp, shp, kml, gml, csv. Shapefiles (.shp) download as zip archive (.zip). <br /><br />Defaults to json.",
                    "required": true,
                    "type": "string",
                    "default": "json",
                    "enum": [
                        "json",
                        "jsonp",
                        "shp",
                        "kml",
                        "gml",
                        "csv"
                    ]
                }],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "produces": [
                    "application/json",
                    "text/javascript",
                    "application/zip",
                    "application/vnd.google-earth.kml+xml",
                    "text/xml",
                    "text/csv"
                ]
            }
        }
    }
}
